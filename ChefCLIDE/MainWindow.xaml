<Window x:Class="ChefCLIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChefCLIDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Activated="Window_Activated">
    <Grid>
        <TextBox x:Name="CodeText" Margin="0,34,0,0" TextWrapping="Wrap" Text="TextBox" FontSize="16" AcceptsTab="True" AcceptsReturn="True" Initialized="CodeText_Initialized"/>
        <Button Content="Run" Click="Button_Click_1" Height="34" VerticalAlignment="Top" HorizontalAlignment="Right" Width="88"/>
        <Button Content="Save" Margin="0,0,163,0" VerticalAlignment="Top" Height="34" Click="Button_Click_2" HorizontalAlignment="Right" Width="100"/>
        <TextBox x:Name="SaveTextbox" TextWrapping="Wrap" Text="File Name" Width="120" Margin="0,0,263,0" TextChanged="SaveTextbox_TextChanged" Height="34" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Button x:Name="LoadButton" Content="Load" Margin="0,0,383,0" Click="Button_Click_3" HorizontalAlignment="Right" Width="109" Height="34" VerticalAlignment="Top"/>
    </Grid>
</Window>
